@import "nib";

html,
body {
  height: 100%;
}

#main-app {
  height: 100%;
}

.board-container {
  //http://stackoverflow.com/a/20107222/1239621
  font-size: 0;
}

.tile {
  display: inline-block;
  border: 1px solid #cccccc;
  width: 50px;
  height: 50px;
}

.icon {
  width: 50px;
  height: 50px;
  font-size: 24px;
  line-height: 50px;
  text-align: center;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 25px;
}

.app-container {
  height: 100%;
  padding: 0;
  margin: 0;
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
